extends layout.pug

block meta
  meta(property="og:type", content="article")
  meta(property="og:title", content=postTitle)
  meta(property="og:description", content=postTitle)
  meta(property="og:url" content="https://sercan.io/post/"+postSlug)
  //- meta(property="og:image" content="")
  meta(name="twitter:title" content=postTitle)
  meta(name="twitter:card" content="summary")
  meta(name="twitter:site" content="@sercan_io")
  meta(name="twitter:creator" content="@sercan_io")
  meta(name="twitter:description" content=postTitle)
  //- meta(name="twitter:image" content="")

  if(postHasCode)
    link(rel="stylesheet" href="/styles/atom-one-light.css")
    link(rel="stylesheet" href="/styles/atom-one-dark.css")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/highlight.min.js")


block content
  main.main
    .card
      article(class="card-body")
        h1.post-title= postTitle
        em.post-date published on #{postDate.toLowerCase()}
        .divider
        !=postContent
  if(postHasCode)
    script.
      hljs.highlightAll();
